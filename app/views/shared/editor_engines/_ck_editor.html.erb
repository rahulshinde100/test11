<%= javascript_include_tag('ckeditor/init') %>
<%= javascript_include_tag "jquery" %>

<script type="text/javascript">
  $(function() {
    var ids = [<%= raw ids.map{|id| "'#{id}'"}.join(', ') %>];
    for(var key in ids){
      if($('#' + ids[key]).length > 0){
        CKEDITOR.replace(ids[key]);
      }
    }
  });
</script>