<div id="wrapper-seller" data-hook >
  <div id="brand-second-row">
    
      <div class="seller-info-text">
         <div id="brand-store-informations" class="">
              <%= raw @seller.description%>
          </div>

         <div id="brand-store-locations" class="">
            <div id="map-container">
              <div id="loc-list">
                <ul id="list"></ul>
              </div>
            </div>  
          </div>
       
