          <div id="map-box"> 
            <div id="map"></div>        
          </div>
        </div>
          <div  id="seller_products" data-hook="seller_products" class="seller-products">
            <%# if @products.count > 0%>
              <div data-hook="taxon_children">
                <%unless @categories.nil?%>
                  <%#@categories.each do |category|%>
                    <%= render :partial => 'taxon', :collection => @categories%>
                  <%#end%>
                <%end%>
              </div>
            <%#end%>
        </div>  
   
  </div>
  <div id="brand-second-row-gap" class="clearboth"></div>
  
  <div id="brand-desccription">          
     
    
    <div id="store-locator-container"></div>
  </div>
</div> 
     
            
<script type="text/javascript">  
  $(document).ready(function(){    
    $('#map-container').storeLocator({'dataType': 'json',  'dataLocation': '<%=locations_seller_path(@seller)%>', 'slideMap': false, 'defaultLoc': true, 'defaultLat': 1.320302, 'defaultLng': 103.840599 , 'autoGeocode': false, distanceAlert: 40000  , 'listColor1' : 'F8F8F9', 'callbackComplete': function(){   } });
  
    $('#close-icon-div').click(function (){
     $('#map-box').css('visibility', 'hidden'); 
     $('ul#list li').each(function(){
        if($(this).hasClass('list-focus'));
            $(this).removeClass('list-focus');
      });
    });
  });
  function move_to_packing_bag(id){  
    if($('#list-label-'+id).hasClass('store-pin')){ 
      $(".list-label").removeClass('store-pin');
    }
    else{
       $('.list-label').each(function(){
          if($(this).hasClass('store-pin'))
            $(this).removeClass("store-pin");
      });
      $("#list-label-"+id).addClass('store-pin');
    }
  }  
</script>   
