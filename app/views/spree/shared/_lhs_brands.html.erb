<%if @taxon.present?%>
<h6>Brands in '<%=@taxon.name.try(:capitalize)%>'</h6>
<%end%>
<div class="arrow-right"></div>
<div class="lhs-ul-3-column">
<ul class="lhs-ul">
	<% sorted_brands.each.with_index do |brand, index|  %>
		<% count = products.where(:brand_id => brand.id).count %>
		<li><%= link_to "#{brand.name.capitalize} (#{count})" , brand_path(brand)  %></li>
	<% end %>

</ul>
</div>
