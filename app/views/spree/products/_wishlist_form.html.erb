
  <div id="wishlist-form">
    <% if spree_current_user %>
    <%= form_for Spree::WishedProduct.new do |f| %>
      <%= f.hidden_field :variant_id, :value => variant.id %>
      <button type="submit" class="large primary" id="btn-wishlist-product">
      </button>
      <span style="font-size:14px;color:#757675;">
      	<%= Spree.t(:add_to_wishlist) %>
      </span>
    <% end %>
    <% else%>
      <a href="#" style="cursor: default;" class="large primary" id="btn-wishlist-product" onclick="add_to_wishlist(<%= variant.id%>);">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Add To Wishlist</a>
    <% end %>
  </div>

