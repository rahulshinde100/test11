<h1><%= Spree.t("brands") %></h1>
<%if @brands.any?%>
  <table class="index">
    <thead>
      <tr data-hook="admin_relation_types_index_headers">
        <th><%= Spree.t("name") %></th>
        <th><%= Spree.t("description") %></th>
        <th><%= Spree.t("logo") %></th>
        <th><%= Spree.t("banner") %></th>
        <th data-hook="admin_relation_types_index_header_actions">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @brands.each do |brand| %>
        <tr id="<%= dom_id brand %>" data-hook="admin_relation_types_index_rows">
          <td><%= brand.name %></td>
          <td><%= truncate(brand.description)%></td>
          <td><%= image_tag brand.logo.url(:small)%></td>
          <td><%= image_tag brand.banner.url(:small)%></td>
          <td width="140px" data-hook="admin_relation_types_index_row_actions">
            <%= link_to_edit brand , :no_text => true, :class => 'edit' %> &nbsp;
            <%= link_to_delete brand , :no_text => true%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= Spree.t(:no_results) %>
  </div>
<% end %>
