<% if @taxonomies.present? %>
<div class="custom_responsive CSSTableGenerator">
  <table class="index sortable" id='listing_taxonomies' data-hook data-sortable-link="<%= update_positions_admin_taxonomies_url %>">
    <thead>
      <tr data-hook="taxonomies_header">
        <th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:edit) %></th>
      </tr>
    </thead>
    <tbody>
      <% @taxonomies.each do |taxonomy| %>
        <tr id="<%= spree_dom_id taxonomy %>" data-hook="taxonomies_row" class="<%= cycle('odd', 'even')%>">
          <td><%= taxonomy.name %></td>
          <td width="60">
            <%= link_to_edit taxonomy.id, :no_text => true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  
<% else %>
  <div class="no-objects-found field" style="text-align: center;">
    <h2>No Taxonomies added yet</h2>
  </div>
<% end %>
