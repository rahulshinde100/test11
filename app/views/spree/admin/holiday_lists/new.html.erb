<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @holiday_list } %>
<% content_for :page_title do %>
  Holiday List | New
<% end %>
<%= form_for  @holiday_list ,:url => admin_seller_holiday_lists_path(@seller), :method => :post do |f| %>
  <fieldset data-hook="new_seller">
    <legend align="center">New Holiday</legend>
      <%= render :partial => 'form', :locals => {:f => f} %>
      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button "Save", 'icon-ok' %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', Spree.t('actions.cancel'), admin_seller_holiday_lists_path(@seller), :class => 'button' %>
      </div>
  </fieldset>
<%end%>