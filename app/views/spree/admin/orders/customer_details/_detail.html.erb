<fieldset data-hook="admin_customer_detail_form_fields" class="no-border-top">

  <fieldset class="index no-border-bottom" data-hook="customer_guest">
    <legend style="text-align:left;"><%= Spree.t(:customer_details) %></legend>

    <div data-hook="customer_fields" class="row">
      <div class="alpha twelve columns">
        <div class="field">
          <%= f.label :email, Spree.t(:email) %>
          <%= f.email_field :email, :class => 'fullwidth email-show', :readonly => "readonly" %>
        </div>
      </div>
    </div>
  </fieldset>

  <div data-hook="bill_address_wrapper" class="alpha six columns">
    <fieldset class="no-border-bottom">
    <legend style="text-align:left;"><%= Spree.t(:billing_address) %></legend>
    <div class="field">
      <label for="First Name">First Name</label></br>
      <input type="text" disabled="disabled" class="disable fullwidth" value="<%= @order.billing_address.present? && @order.billing_address.firstname.present? ? @order.billing_address.firstname : "-" %>" />
    </div>
    <div class="field">
      <label for="Last Name">Last Name</label></br>
      <input type="text" disabled="disabled" class="disable fullwidth" value="<%= @order.billing_address.present? && @order.billing_address.lastname.present? ? @order.billing_address.lastname : "-" %>" />
    </div>
    <div class="field">
      <label for="Street Address">Address 1</label></br>
      <textarea rows="2" disabled="disabled" class="disable fullwidth" style="resize:none" ><%= @order.billing_address.present? && @order.billing_address.address1.present? ? @order.billing_address.address1 : "-" %></textarea>
<!--       <input type="textarea" disabled="disabled" class="disable" value="<%#= @order.billing_address.address1.present? ? @order.billing_address.address1 : "-" %>" /> -->
    </div>
    <div class="field">
      <label for="Street Address">Address 2</label></br>
      <textarea rows="2" disabled="disabled" class="disable fullwidth" style="resize:none"><%= @order.billing_address.present? && @order.billing_address.address2.present? ? @order.billing_address.address2 : "-" %></textarea>
<!--       <input type="text" disabled="disabled" class="disable" value="<%#= @order.billing_address.address2.present? ? @order.billing_address.address2 : "-" %>" /> -->
    </div>
    <div class="field">
      <label for="City">City</label></br>
      <input type="text" disabled="disabled" class="disable fullwidth" value="<%= @order.billing_address.present? && @order.billing_address.city.present? ? @order.billing_address.city : "-" %>" />
    </div>
     <div class="field">
      <label for="State">State</label></br>
      <input type="text" disabled="disabled" class="disable fullwidth" value="<%= @order.billing_address.present? && @order.billing_address.state_name.present? ? @order.billing_address.state_name : "-" %>" />
    </div>
        <div class="field">
      <label for="Country">Country</label></br>
      <input type="text" disabled="disabled" class="disable fullwidth" value="<%= @order.billing_address.present? && @order.billing_address.country_id.present? ? Spree::Country.find(@order.billing_address.country_id).name : "-" %>" />
    </div>
    <div class="field">
      <label for="Zip">Zip code</label></br>
      <input type="text" disabled="disabled" class="disable fullwidth" value="<%= @order.billing_address.present? && @order.billing_address.zipcode.present? ? @order.billing_address.zipcode : "-" %>" />
    </div>
    <div class="field">
      <label for="Phone">Contact 1</label></br>
      <input type="text" disabled="disabled" class="disable fullwidth" value="<%= @order.billing_address.present? && @order.billing_address.phone.present? ? @order.billing_address.phone : "-" %>" />
