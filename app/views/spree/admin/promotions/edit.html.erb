<% content_for :page_title do %>
    <%= Spree.t(:editing_promotion) %>
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to Spree.t(:back_to_promotions_list), admin_promotions_path, :icon => 'icon-arrow-left' %>
    </li>
<% end %>

<%= form_for @promotion, :url => object_url, :method => :put do |f| %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%#= render :partial => 'spree/admin/shared/edit_promotion_resource_links' %>

      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t('actions.update'), 'icon-refresh' %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= button_link_to Spree.t('actions.cancel'), collection_url, :icon => 'icon-remove' %>
        <% if @promotion.is_active_promotion %>
          <span class="or"><%= Spree.t(:or) %></span>
          <%= link_to 'close', force_close_admin_promotion_path(@promotion), :class=>'icon-remove button', :id =>'close_promo', method:'put', :confirm => 'Are you sure want to close this promotion now?'%>
        <% end %>
      </div>

    </fieldset>
<% end %>

<div id="promotion-filters" class="row">
  <div id="rules_container" class="alpha eight columns">
    <%= render :partial => 'rules' %>
  </div>

  <div id="actions_container" class="omega eight columns">
    <%= render :partial => 'actions' %>
  </div>
</div>

