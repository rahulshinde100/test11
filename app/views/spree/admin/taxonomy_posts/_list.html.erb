<% if @taxonomy_posts.present? %>
  <table class="index sortable" id='listing_taxonomy_posts' data-hook data-sortable-link="<%= update_positions_admin_taxonomy_posts_url %>">
    <colgroup>
      <col>
      <col style="width: 85%">
      <col style="width: 11%">
    </colgroup>
    <thead>
      <tr data-hook="taxonomy_posts_header">
        <th colspan=2><%= t(:name) %></th>
        <th><%= t(:edit) %></th>
      </tr>
    </thead>
    <tbody>
      <% @taxonomy_posts.each do |taxonomy_post| %>
        <tr id="<%= spree_dom_id taxonomy_post %>" data-hook="taxonomy_posts_row" class="<%= cycle('odd', 'even')%>">
          <td class="no-border">
            <span class="handle"></span>
          </td>  
          <td>            
            <%= taxonomy_post.name %>
          </td>
          <td class="actions">
            <%= link_to_edit taxonomy_post.id, :no_text => true %>
            <%#= link_to_delete taxonomy_post, :no_text => true %>
            <%= link_to "", admin_taxonomy_post_path(taxonomy_post), :confirm => "Are you sure", :method => :delete, :class => "icon_link with-tip icon-trash no-text" %>                    
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found field" style="text-align: center;">
    <h2>No taxonomy-post added yet </h2>
  </div>
<% end %>