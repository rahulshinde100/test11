<%#= render :partial => 'spree/admin/shared/seller_sub_menu' %>
  <div class="left eight columns alpha" data-hook="admin_product_form_left">    
    
      <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
      <%= f.text_field :name, :class => 'fullwidth title', :required => true %>
      <%= f.error_message_on :name %>
      <% end %>
    
    
      <%= f.field_container :logo do %>
        <%= f.label :logo, "Logo" %><span class="required">*</span><br />
        <%= f.file_field :logo, :class => 'fullwidth'%>
        <%= f.error_message_on :logo %>
      <% end %>
    
      <%= f.field_container :banner do %>
        <%= f.label :banner, "Banner" %><span class="required">*</span><br />
        <%= f.file_field :banner, :class => 'fullwidth'%>
        <%= f.error_message_on :banner %>
      <% end %>
    
    
      <%= f.field_container :description do %>
        <%= f.label :description, Spree.t(:description) %>
        <%= f.text_area :description, {:rows => "10", :class => 'fullwidth'} %>
        <%= f.error_message_on :description %>
      <% end %>
    
  </div>
  <div class="right four columns omega" data-hook="admin_product_form_right">
    <%= f.field_container :address_1 do %>
      <%= f.label :address, "Address" %><span class="required">*</span><br />
      <%= f.text_field :address_1, :size => 16, :class => 'fullwidth', :required => true %>
      <%= f.error_message_on :address_1 %>
    <% end %>
    
      <%= f.field_container :address_2 do %>
        <%= f.label :address_2, "Address 2" %><br />
        <%= f.text_field :address_2, :size => 16, :class => 'fullwidth' %>
      <% end %>
    
    <div class="alpha two columns">
      <%= f.field_container :city do %>
        <%= f.label :city, "City" %> <span class="required">*</span><br />
        <%= f.text_field :city, :class => 'fullwidth', :value => "Singapore", :readonly => true%>
        <%= f.error_message_on :city %>
      <% end %>
    </div>
    <div class="clear"></div>
      <%= f.field_container :state do %>
        <%= f.label :state, "State"%>
        <%= f.error_message_on :state %>
        <%= f.text_field :state, :class => 'fullwidth', :value => "Singapore",:readonly => true%>
      <% end %>
      
      <%= f.label :country_id, Spree.t(:country) %><span class="required">*</span></br>
      <input type="text" value="Singapore" class='fullwidth' readonly = true/>
      <%= f.hidden_field :country_id, :value => Spree::Country.find_by_name("Singapore").id, :readonly => true %> 
      
      <%= f.label :establishment_date, t(:shipli_joining_date) %><br />
      <%= f.text_field :establishment_date, :class => 'title datepicker', :required => true %>   
    </div>
    <div class="twelve columns alpha omega">
      <div class="alpha four columns">  
        <%= f.field_container :zip do %>
          <%= f.label :zip, "Zip"%>
          <%= f.error_message_on :zip %>
          <%= f.text_field :zip, :class => 'fullwidth', :required => true %>
        <% end %>
      </div>
      <div class="alpha four columns">  
        <%= f.field_container :url do %>
          <%= f.label :url, "URL"%>
          <%= f.error_message_on :url %>
          <%= f.url_field :url, :class => 'fullwidth'%>
        <% end %>
      </div>
      <div class="alpha four columns">  
        <%= f.field_container :contact_person_name do %>
          <%= f.label :contact_person_name, "Contact Person Name" %><span class="required">*</span><br />
          <%= f.text_field :contact_person_name, :size => 16, :class => 'fullwidth', :required => true %>
          <%= f.error_message_on :contact_person_name %>
        <% end %>
      </div>
    </div>  
    <div data-hook="admin_product_form_meta" class="alpha omega twelve columns">
      <div class="alpha four columns">
        <%= f.field_container :contact_person_email do %>
          <%= f.label :contact_person_email, "Contact Person Email" %><span class="required">*</span><br />
          <%= f.email_field :contact_person_email, :size => 16, :class => 'fullwidth email', :required => true %>
          <%= f.error_message_on :contact_person_email %>
        <% end %>
      </div>  
      <div class="alpha four columns">
        <%= f.field_container :phone do %>
          <%= f.label :phone, "Contact Number" %><span class="required">*</span><br />
          <%= f.text_field :phone, :size => 16, :class => 'fullwidth phone', :required => true %>
          <%= f.error_message_on :phone %>
        <% end %>
      </div>
      <div class="alpha four columns">
        <%= f.field_container :roc_number do %>
          <%= f.label :roc_number, "Roc Number" %><span class="required">*</span><br />
          <%= f.text_field :roc_number, :size => 16, :class => 'fullwidth', :required => true %>
          <%= f.error_message_on :roc_number %>
        <% end %>
      </div>
      
      <div class="alpha four columns">
        <%= f.field_container :termsandconditions do %>
          <%= f.check_box :termsandconditions, :required => true %>
          <%= f.label :termsandconditions, "Terms & Condition" %>
          <%= f.error_message_on :termsandconditions %>
        <% end %>
      </div>
    </div>
  </div>